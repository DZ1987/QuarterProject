    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div>
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <dl class="row">
        <dt>
            Title:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserTextTitle)
        </dd>
