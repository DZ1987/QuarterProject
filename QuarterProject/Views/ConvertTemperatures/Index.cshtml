@model IEnumerable<QuarterProject.Models.ConvertTemperature>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="_display-block-ruby">
    <h3>Converts the Selected Temperature</h3>
</div>
<div class="_display-block-ruby">
    <input id="input1" oninput="convertTemperature(1)">
    <select id="temperatureName1" onchange="convertTemperature(1)">
        @foreach (var item in Model.Select(m => m.TemperatureName).Distinct())
        {
            <option>@Html.DisplayFor(modelItem => item)</option>
        }
    </select>
    <p>=</p>
    <input id="input2" disabled>
    <select id="temperatureName2" onchange="convertTemperature(1)">
        @foreach (var item in Model.Select(m => m.TemperatureName).Distinct())
        {
            <option>@Html.DisplayFor(modelItem => item)</option>
        }
    </select>
</div>

<div class="_display-block-ruby">
    <p>Formula: </p>
    <p id="formula"></p>
</div>
<div class="_display-block-ruby">
    <p>Result: </p>
    <p id="conversion"></p>
    <p id="result"></p>
</div>

<div class="_invisible">
    @foreach (var item in Model)
    {
        <input id="@Html.DisplayFor(modelItem => item.TemperatureConversion)" value="@Html.DisplayFor(modelItem => item.TemperatureFormula)">
        <label>@Html.DisplayFor(modelItem => item.TemperatureConversion)</label>
        <br>
    }
</div>
